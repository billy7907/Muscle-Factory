<button type="button" class="close" data-dismiss="modal" aria-label="Close">
  <span aria-hidden="true">&times;</span>
</button>

<div class='text-center'>
  <div id='modal-container'>
    <div id='groups-input'>

      <h1 style='color:red'>Choose a Muscle Group</h1>

      <% @groups.each do |g| %>
      <%= link_to g.name, "/drills/new?day_id=#{@day}&group_id=#{g.id}", class:'btn btn-default', remote: true, style:'margin:5px' %>
      <br>


      <% end %>
    </div>
  </div>
</div>
