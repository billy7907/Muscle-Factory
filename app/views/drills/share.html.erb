
<div style='background-color:white' class='text-center'>
  <h1 id='title'>Program by Other Users</h1>
  <hr>
  <% arr_trainer = [] %>
  <% arr_group =[] %>

  <% @drills.each do |x| %>
    <% if !arr_trainer.include?(x.user.full_name) %>
      <% arr_trainer.push(x.user.full_name) %>
    <% end %>

    <% if !arr_group.include?(x.exercise.group.name) %>
      <% arr_group.push(x.exercise.group.name) %>
    <% end %>
  <% end %>

    <% arr_trainer.each do |x| %>
    <h3 id='trainer'>Trainer: <%= x %></h3>
    <% end %>
