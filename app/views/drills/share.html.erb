        <div class='col-md-4'><p><strong>Sets</strong></p></div>
        <div class='col-md-4'><p><strong>Reps</strong></p></div>
        <% Drill.where(day_id: 0).each do |x| %>
        <div class='col-md-4'><%= x.exercise.name %></div>
        <div class='col-md-4'><%= x.sets %></div>
        <div class='col-md-4'><%= x.reps %></div>
