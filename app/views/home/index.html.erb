$(function() {
  $('body').vegas({
    transitionDuration: 1000,
      slides: [
          { src: '<%= image_path('image05') %>' },
          { src: '<%= image_path('image02') %>' },
          { src: '<%= image_path('image03') %>' },
          { src: '<%= image_path('image04') %>' },
          { src: '<%= image_path('image06') %>' },
