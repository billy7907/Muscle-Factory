<button type="button" class="close" data-dismiss="modal" aria-label="Close">
  <span aria-hidden="true">&times;</span>
</button>

<h2 class="text-center"> Login </h2>
<div id='error'></div>
<%= form_tag sessions_path, remote: true do %>
  <div class="">
    <div class="form-group">
      <%= label_tag :email, "Email", class: "control-label" %>
      <div>
        <%= email_field_tag :email, nil, class:"form-control", placeholder: "Email" %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag :password, "Password", class: "control-label" %>
      <div>
        <%= password_field_tag :password, nil, class:"form-control", placeholder: "Password" %>
      </div>
    </div>
  <br>
  <div class="text-center">
    <%= submit_tag 'Sign In', class: "btn btn-primary" %>
  </div>
  <hr>

  <div class='form-group'>
    <%= link_to sign_in_with_twitter_path, class:'btn btn-block btn-social btn-lg btn-twitter' do %>
      <i class='fa fa-twitter'></i><span>Sign in with Twitter</span>
    <% end %>
  </div>

  <div class='form-group'>
    <%= link_to sign_in_facebook_path, class:'btn btn-block btn-social btn-lg btn-facebook' do %>
      <i class='fa fa-facebook'></i><span>Sign in with Facebook</span>
    <% end %>
  </div>
</div>
<% end %>
